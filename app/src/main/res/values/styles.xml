<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="top_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="top_menu_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="page_heading">
        <item name="android:layout_width">216dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:text">@string/page_heading</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1000</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="card_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:layout_weight">1000</item>
    </style>

    <style name="card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="card_avatar">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="background">@color/black</item>
    </style>

    <style name="card_name">
        <item name="android:layout_width">272dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="card_date">
        <item name="android:layout_width">272dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="card_text">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="card_replays">
        <item name="android:layout_width">99dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_weight">100</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="card_icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">end</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="bottom_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="bottom_menu_icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="bottom_menu_icon_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

</resources>